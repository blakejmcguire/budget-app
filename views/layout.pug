doctype html
html
    head 
        script(script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
        block scripts
    body 
        .navbar.navbar-expand-sm.bg-body-tertiary 
            .container-fluid 
                a.navbar-brand(href="/") Budget App 
                button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon 
                .collapse.navbar-collapse 
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0 
                        li.nav-item 
                            a.nav-link(href="/") Home
                        li.nav-item 
                            a.nav-link(href="/cashflow") Cashflow
                        li.nav-item 
                            a.nav-link(href="/form") Form
                        li.nav-item 
                            a.nav-link(href="/payments") Payments
                        li.nav-item 
                            a.nav-link(href="/budget") Budget
                    if authenticated
                        .navbar-nav
                            a.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") #{nickname}
                            ul.dropdown-menu.dropdown-menu-end.m-2
                                li 
                                    a.dropdown-item(href="/user/profile") Profile 
                                li 
                                    a.dropdown-item(href="/logout") Log Out
                    else 
                        a.btn.btn-outline-secondary(href="/login") Log In
        block content
